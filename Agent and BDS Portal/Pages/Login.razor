@page "/login"
<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card" style="width: 350px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
        <div class="card-body p-4">
            <div class="row mb-3">
                <div class="col-12 text-center">
                    <img src="images/ck_logo.png" alt="CK Logo" class="img-fluid" style="max-height: 70px;" />
                </div>
            </div>

            <!-- Username Input -->
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input id="username" type="text" class="form-control" placeholder="Enter your username" />
            </div>

            <!-- Password Input -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" type="password" class="form-control" placeholder="Enter your password" />
            </div>

            <!-- Login Button -->
            <div class="d-grid">
                <button class="btn btn-success btn-lg">Login</button>
            </div>

            <!-- Forgot Password & Signup Links -->
            <div class="text-center mt-3">
                <a href="#" class="text-decoration-none">Forgot Password?</a>
            </div>
            <div class="text-center mt-2">
                <small>Don't have an account? <a href="#" class="text-primary text-decoration-none">Sign Up</a></small>
            </div>
        </div>
    </div>
</div>
