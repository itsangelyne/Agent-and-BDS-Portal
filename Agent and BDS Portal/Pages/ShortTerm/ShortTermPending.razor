@page "/ShortTerm/Spendinglist"
@using Agent_and_BDS_Portal.Data
@using Agent_and_BDS_Portal.Model
@inject CGL_Insured_Services insuredServices

<h3><strong>Pending</strong></h3>

<div class="container mt-0">
    <!-- Unified Border -->
    <div class="border p-4" style="background-color: #ffff;">
        <h3 class="text-center font-weight-bold"><strong>SHORT TERM</strong></h3>

        <!-- Search Bar -->
        <label class="font-weight-bold">Search:</label>
        <input type="text" @bind="searchQuery" class="form-control" placeholder="Search...">

        <!-- Table -->
        <div class="mt-4 table-responsive">
            <table class="table table-bordered table-hover">
                <thead style="background-color: #77B254;">
                    <tr>
                        <th style="color:white;">DCHS</th>
                        <th style="color:white;">First Name</th>
                        <th style="color:white;">Middle Name</th>
                        <th style="color:white;">Last Name</th>
                        <th style="color:white;">Age</th>
                        <th style="color:white;">Gender</th>
                        <th style="color:white;">Term Type</th>
                        <th style="color:white;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!filteredList.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-danger">No records found.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var insured in filteredList)
                        {
                            <tr>
                                <td class="hover-cell text-center">@insured.DCHS</td>
                                <td class="hover-cell text-center">@insured.First_Name</td>
                                <td class="hover-cell text-center">@insured.Middle_Name</td>
                                <td class="hover-cell text-center">@insured.Last_Name</td>
                                <td class="hover-cell text-center">@insured.Age</td>
                                <td class="hover-cell text-center">@insured.Gender</td>
                                <td class="hover-cell text-center">@insured.Type</td>
                                <td>
                                    <a class="btn btn-outline-success btn-sm" @onclick="() => OpenDetailsModal(insured)">View Details</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (IsModalOpen)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content shadow-lg rounded-4">
                <!-- Modal Header -->
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-info-circle-fill me-2"></i> Application Details
                    </h5>
                    <button type="button" class="btn-close text-white" @onclick="CloseDetailsModal"></button>
                </div>

                <!-- Modal Body -->
                <div class="modal-body" style="max-width: 100%; width: auto;">
                    <form>
                        <div class="row mb-3">
                            <div class="col-sm-6">
                                <label for="id" class="form-label fw-bold">ID Insured:</label>
                                <input type="text" class="form-control" id="id" @bind="@SelectedDetail.ID_Insured" />
                            </div>
                            <div class="col-sm-6">
                                <label for="policyHolder" class="form-label fw-bold">DCHS:</label>
                                <input type="text" class="form-control" id="policyHolder" @bind="@SelectedDetail.DCHS" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Term Type:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Type" />
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseDetailsModal">Close</button>
                    <button class="btn btn-primary">Done</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string searchQuery = string.Empty;
    private List<CGL_Insured> InsuredObj { get; set; } = new List<CGL_Insured>();
    private List<CGL_Insured> filteredList => InsuredObj
        .Where(p => string.IsNullOrEmpty(searchQuery) ||
                    p.DCHS.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    p.First_Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    p.Last_Name.Contains(searchQuery, StringComparison.OrdinalIgnoreCase))
        .ToList();
    private bool IsModalOpen = false;
    private CGL_Insured SelectedDetail = new CGL_Insured();

    private void OpenDetailsModal(CGL_Insured detail)
    {
        SelectedDetail = detail;
        IsModalOpen = true;
    }

    private void CloseDetailsModal()
    {
        IsModalOpen = false;
    }

    protected override async Task OnInitializedAsync()
    {
        var result = await insuredServices.GetAllCGL_INSUREDAsync();
        InsuredObj = result?.Where(x => string.Equals(x.Type, "Short Term", StringComparison.OrdinalIgnoreCase)).ToList() ?? new List<CGL_Insured>();
    }
}
