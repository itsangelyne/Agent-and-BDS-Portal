@page "/ShortTerm/Spendinglist"
@using Agent_and_BDS_Portal.Data
@using Agent_and_BDS_Portal.Model
@inject CGL_Insured_Services insuredServices
<h3><strong>Pending</strong></h3>


<div class="container mt-0">
    <!-- Unified Border -->
    <div class="border p-4" style="background-color: #ffff;">
        <h3 class="text-center font-weight-bold"><strong>SHORT TERM</strong></h3>

        <!-- Search Bar -->
        <label class="font-weight-bold">Search:</label>
        <input class="form-control" placeholder="Search...">

        <!-- Table -->
        <div class="mt-4 table-responsive">
            <table class="table table-bordered">
                <thead style="background-color: #77B254;">
                    <tr>
                        <th style="color:white;">DCHS</th>
                        <th style="color:white;">First Name</th>
                        <th style="color:white;">Middle Name</th>

                        <th style="color:white;">Last Name</th>
                        <th style="color:white;">Age</th>
                        <th style="color:white;">Gender</th>
                        <th style="color:white;">Term Type</th>
                        <th style="color:white;">Action</th>

                    </tr>
                </thead>
                <tbody>
                    @if (InsuredObj == null || !InsuredObj.Any())
                    {
                        <tr>
                            <td colspan="10" class="text-center">No records found.</td>
                        </tr>
                    }
                    @foreach (var insured in InsuredObj)
                    {
                        <tr>
                            <td>@insured.DCHS</td>
                            <td>@insured.First_Name</td>
                            <td>@insured.Middle_Name</td>
                            <td>@insured.Last_Name</td>
                            <td>@insured.Age</td>
                            <td>@insured.Gender</td>
                            <td>@insured.Type</td>

                            <td><a class="btn btn-outline-success btn-sm" @onclick="() => OpenDetailsModal(insured)">View Details</a></td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
@if (IsModalOpen)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content shadow-lg rounded-4">
                <!-- Modal Header -->
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title">
                        <i class="bi bi-info-circle-fill me-2"></i> Application Details
                    </h5>
                    <button type="button" class="btn-close text-white" @onclick="CloseDetailsModal"></button>
                </div>

                <!-- Modal Body -->
                <div class="modal-body modal-body" style="max-width: 100%; width: auto;">
                    <form>
                        <div class="row mb-3">
                            <div class="col-sm-6">
                                <label for="id" class="form-label fw-bold">ID Insured:</label>
                                <input type="text" class="form-control" id="id" @bind="@SelectedDetail.ID_Insured" />
                            </div>
                            <div class="col-sm-6">
                                <label for="policyHolder" class="form-label fw-bold">DCHS:</label>
                                <input type="text" class="form-control" id="policyHolder" @bind="@SelectedDetail.DCHS" />
                            </div>

                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Firstname:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.First_Name" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Lastname:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Last_Name" />
                            </div>

                            <div class="col-sm-6">
                                <label for="policyHolder" class="form-label fw-bold">Suffix:</label>
                                <input type="text" class="form-control" id="policyHolder" @bind="@SelectedDetail.Suffix" />
                            </div>
                            <div class="col-sm-6">
                                <label for="nameofinsured" class="form-label fw-bold">Civil Status:</label>
                                <input type="text" class="form-control" id="nameofinsured" @bind="@SelectedDetail.Civil_Status" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Gender:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Gender" />
                            </div>

                            <div class="col-sm-6">
                                <label for="nameofinsured" class="form-label fw-bold">Height:</label>
                                <input type="text" class="form-control" id="nameofinsured" @bind="@SelectedDetail.Height" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Weight:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Weight" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Address:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Address" />
                            </div>

                            <div class="col-sm-6">
                                <label for="nameofinsured" class="form-label fw-bold">Contact Number:</label>
                                <input type="text" class="form-control" id="nameofinsured" @bind="@SelectedDetail.Contact_Number" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Email Address:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Email_Address" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Age:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Age" />
                            </div>

                            <div class="col-sm-6">
                                <label for="nameofinsured" class="form-label fw-bold">Date of Birth:</label>
                                <input type="text" class="form-control" id="nameofinsured" @bind="@SelectedDetail.Date_Of_Birth" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Place_Of_Birth:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Place_Of_Birth" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Nationality:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Nationality" />
                            </div>

                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">TIN_SSS_GSIS_No:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.TIN_SSS_GSIS_NO" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Sources_Of_Funds:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Source_Of_Funds" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Nature of Self Employment:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Nature_of_Self_Employment_Business" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Address of Business or Employer:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Address_Of_Business_or_Employer" />
                            </div>

                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Occupation and Livelihood:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Occupation_And_Livelihood" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Pregnant:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Pregnant" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">How Many Months:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.How_Many_Months" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Image:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Image" />
                            </div>
                            <div class="col-sm-6">
                                <label for="civilstatus" class="form-label fw-bold">Term Type:</label>
                                <input type="text" class="form-control" id="civilstatus" @bind="@SelectedDetail.Type" />
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Modal Footer -->
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseDetailsModal">Close</button>
                    <button class="btn btn-primary">Done</button>
                </div>
            </div>
        </div>
    </div>
}


@code {
    private List<CGL_Insured>? InsuredObj = new List<CGL_Insured>();

    private string SelectedType { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        var result = await insuredServices.GetAllCGL_INSUREDAsync();
        InsuredObj = result ?? new List<CGL_Insured>();
        InsuredObj = result.Where(x => string.Equals(x.Type, "Short Term", StringComparison.OrdinalIgnoreCase)).ToList();

    }

    private void HandleTypeChange(ChangeEventArgs e)
    {
        SelectedType = e.Value.ToString();

        Console.WriteLine($"Selected Type: {SelectedType}");
    }
    private bool IsModalOpen = false;
    private CGL_Insured SelectedDetail = new CGL_Insured();

    private void OpenDetailsModal(CGL_Insured detail)
    {
        SelectedDetail = detail;
        IsModalOpen = true;
    }


    private void CloseDetailsModal()
    {
        IsModalOpen = false;
    }

}
