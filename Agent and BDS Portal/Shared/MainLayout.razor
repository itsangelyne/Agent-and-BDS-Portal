@using Agent_and_BDS_Portal.Data
@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<PageTitle>Agent and BDS Portal</PageTitle>

<div class="page">
    @if (ShowSidebar())
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool ShowSidebar()
    {
        return !IsLoginPage() && !NavigationManager.Uri.EndsWith("/lineofbusiness");
    }

    private bool IsLoginPage()
    {
        return NavigationManager.Uri == NavigationManager.BaseUri || NavigationManager.Uri.Contains("/login");
    }
}
